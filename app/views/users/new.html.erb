<%= render partial: 'shared/header'%>

<div class="contents">
  <div class="login">
    <h1>ユーザー登録</h1>
    <div class="form">
      <%= form_with model: @user do |f| %>
        <div class="form-group login-form">
          <%= f.label :name, :名前%>
          <%= f.text_field :name, id: :name, class: "form-control"%>
        </div>
        <div class="form-group login-form">
          <%= f.label :email, :メールアドレス%>
          <%= f.text_field :email, id: :email, class: "form-control"%>
        </div>
        <div class="form-group login-form">
          <%= f.label :password, :パスワード%>
          <%= f.password_field :password, id: :password, class: "form-control"%>
        </div>
        <div class="form-group login-form">
          <%= f.label :password, :パスワードの確認%>
          <%= f.password_field :password_confirmation, id: :password_confirmation, class: "form-control"%>
        </div>
        <%= f.submit :登録, class: "btn btn-primary login-btn"%>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'shared/footer' %>
